<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.orange3.dao.UserMapper">
	<resultMap id="user" type="com.orange3.entity.User"/>
	<select id="findUserByUsername" parameterType="String" resultMap="user">
		SELECT * FROM user2
		WHERE user_name=#{user_name}
	</select>
	
	<update id="updateUserByUsername" parameterType="user">
		UPDATE USER2 SET USER_PASSWORD=#{user_password} WHERE USER_NAME=#{user_name}
	</update>
	
	<delete id="deleteUserByUsername" parameterType="String">
		DELETE FROM USER2 WHERE USER_NAME=#{user_name}
	</delete>
	
	<insert id="saveUser" parameterType="user">
		INSERT INTO USER2 (user_name,user_password) VALUES (#{user_name},#{user_password})
	</insert>
	
	<select id="getUserList" resultMap="user">
	SELECT * FROM USER2
	</select>
</mapper>